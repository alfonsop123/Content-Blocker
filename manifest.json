{
  "manifest_version": 3,
  "name": "Game Blocker Extension",
  "version": "1.0",
  "description": "Block games on websites",
  "permissions": [
    "activeTab",
    "storage",
    "scripting"
  ],
  "browser_action": {
    "default_popup": "popup.html"
  },
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ]
}
